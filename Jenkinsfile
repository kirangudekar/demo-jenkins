
pipeline
{
agent any
   stages {
      stage('Build')  {
             steps {

               echo 'Build the image'
               echo 'Build stage is completed successfully.'

                   }
              }
       stage('Test') {
               steps {
                   echo 'starting the test stage'
                   echo 'Test stage is completed successfully.'
                     }
                }
      stage('Deploy') {
                 steps {
                      echo 'starting the deploy stage'
                      echo 'Deploy stage is completed successfully.'
                        }
                     }
   }
    
}
